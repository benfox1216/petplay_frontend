<div class="content-container">
  <div class="content">
    <img class="pure-img-responsive" src= <%= @user.image %>><span><h1><%= @user.name %></h1></span>
    <p>Email: <%= @user.email %></p>

<% if @user.zipcode == '00000' %>
  <%= form_with(url: "/profile/#{@user.id}/zip") do %>
    <%= label_tag("Enter Zipcode") %>
    <%= text_field_tag(:zipcode) %>
    <%= submit_tag("Submit") %>
  <% end %>
<% else %>
  <p>Zipcode: <%= @user.zipcode %></p>
<% end %>
<br/>

<form action="/pets/new">
    <input type="submit" value="Add A Pet"/>
</form>

<h2>My Pets</h2>

<% if @user.pets %>
  <% @user.pets.each do |pet| %>
    <div class="pet-<%= pet.id %>">
      Name: <%= pet.name %><br>
      Species: <%= pet.species %><br>
      Age: <%= pet.age %><br>
      Breed: <%= pet.breed %><br>
      Size: <%= pet.size %><br>
      About me: <%= pet.about_me %><br>
      <%= link_to "Update", edit_pet_path(pet) %>
      <%= link_to "Remove", pet_path(pet), method: :delete %>
    </div><br/>
  <% end %>
<% end %>
  </div>
</div>
